{
    "name": "Flutter Development",
    "image": "ghcr.io/cirruslabs/flutter:stable",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "configureZshAsDefaultShell": true,
            "installOhMyZsh": true
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "Dart-Code.flutter"
            ]
        }
    }
}
